<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Drop shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/> <!-- Transparent color for the main part of the shadow -->
            <corners android:radius="8dp"/> <!-- Match the corner radius of the background -->
            <padding
                android:bottom="2dp"
            android:right="2dp"
            android:left="2dp"
            android:top="2dp" />
            <gradient
                android:startColor="#5555558a"
            android:endColor="#5555558a"
            android:angle="90"/>
        </shape>
    </item>
    <!-- Background layer with rounded corners on top of shadow -->
    <item android:top="2dp" android:right="2dp" android:left="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- White background color -->
            <corners android:radius="8dp"/> <!-- Border radius -->
        </shape>
    </item>
</layer-list>