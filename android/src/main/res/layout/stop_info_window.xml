<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/rounded_shadow_background"
    android:padding="16dp"
    android:elevation="4dp">

    <!-- Heading -->
    <TextView
        android:id="@+id/info_window_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Park Town"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="16dp" />

    <!-- List of buses -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:maxHeight="200dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginTop="1.4mm"
                android:src="@drawable/icon3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/vehicle_number_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="PIO202"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    />
                <TextView
                    android:id="@+id/eta_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="In 10mins"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#295b34"/>
            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="250dp"
            android:layout_height="1dp"
            android:layout_marginHorizontal="20dp"
            android:background="@android:color/darker_gray" />


        <!-- Bus item 2 -->
        <LinearLayout
            android:id="@+id/bus_item_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginTop="1.4mm"
                android:src="@drawable/icon3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/vehicle_number_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="PIO202"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000000" />
                <TextView
                    android:id="@+id/eta_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="In 10mins"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#295b34" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/view_line_two"
        android:layout_width="250dp"
        android:layout_height="1dp"
        android:layout_marginHorizontal="20dp"
        android:background="@android:color/darker_gray" />


    <!-- "Show More Buses" button -->
    <Button
        android:id="@+id/see_more_buses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="See More Buses"
        android:paddingLeft="20dp"
        android:textColor="#295b34"
        android:textStyle="bold"
        android:background="#ffffff"
        android:layout_marginTop="16dp"
        android:stateListAnimator="@null"
        android:elevation="0dp"
        android:gravity="start|top|center_vertical"
        android:textAllCaps="false"/>

</LinearLayout>